        <div class="col-md-6 col-lg-4">
            <div class="card  report-card bg-three">
                <div class="card-body ">
                    <div class="row d-flex justify-content-center">
                        <div class="col">
                            <p class="text-white mb-0 fw-semibold font-20">Total Commission</p>
                            <h3 class="m-0 text-white">@Model.TotalCommissionTransaction</h3>

