    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("AddAgent", "Agent")',
        containerSelector: '#add-new .modal-body',
        selector: '#AgentForm'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        Pagination.getData();
    });
</script>
