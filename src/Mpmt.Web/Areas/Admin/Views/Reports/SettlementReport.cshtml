                                        <option value=2>Payout Date</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <div class="input-group">
                                        <input type="text" id="transactionId" name="TransactionId" class="form-control" placeholder="Transaction Id">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group">
                                        <input type="text" id="gatewayTxnId" name="GatewayTxnId" class="form-control" placeholder="Gateway Txn Id">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group">
                                        <input type="text" id="agentTrackerId" name="AgentTrackerId" class="form-control" placeholder="Agent Tracker Id">
                                    </div>
                                </div>
                                <div class="col-12">
