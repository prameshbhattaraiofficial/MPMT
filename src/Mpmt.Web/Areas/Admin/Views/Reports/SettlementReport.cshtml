                                        <option value="" selected>Select Currency</option>
                                    </select>
                                </div>*@
                                <div class="col-12">
                                    <button type="button" id="btnReportsFilter" class="btn btn-primary"><i class="las la-filter ms-1"></i> Filter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h4 class="card-title">Remit Settlement Detail Report</h4>
                        </div>
                        <div class="col-4">
                            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                                <button id="btnSettlementTransactionexportexcell" class="btn btn-primary">  Export to Excel</button>
                                <button id="btnSettlementTransactionexportcsv" class="btn btn-primary"> Export to CSV</button>
                                <button id="btnSettlementTransactionexportPdf" class="btn btn-primary"> Export to Pdf</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body overflow-x-auto">
                    <partial name="_PaginationHeader" />
                    <div id="ReportsTableWrapper" class="table-responsive">
                        <partial name="_SettlementReport" model="@Model" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

