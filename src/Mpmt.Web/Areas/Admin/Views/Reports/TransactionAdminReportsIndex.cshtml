                // });

                // $('#merchantMobile').on('keypress', function (e) {
                //     if (e.which == 13) {
                //         e.preventDefault();
                //         Pagination.getData();
                //         return false;
                //     }
                // });

                $('#btnTransactionexportexcell').on('click', function (e) {

                    e.preventDefault();
                    var paramsA = {
                        Export: 1

                    };
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportTransactiontoexcell", "Reports")');

                    return false;
                });
                $('#btnTransactionexportcsv').on('click', function (e) {

                    e.preventDefault();
                    var paramsA = {
                        Export: 1,

                    }
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportTransactionToCsv", "Reports")');

                    return false;
                });
                $('#btnTransactionexportPdf').on('click', function (e) {
                    e.preventDefault();
                    var paramsA = {
                        Export: 1,

                    };
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportTransactiontoPdf", "Reports")');
                    return false;
                });
            }
        });
    </script>
}