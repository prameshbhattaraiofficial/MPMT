@using Mpmt.Core.Dtos.FundType
@using Mpmt.Core.Models.RMP;
@model IEnumerable<FundTypeDetails>
@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<div class="table-responsive">
    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Fund Type</th>
                <th>Fund Type Code</th>
                <th>Status</th>
                <th>Remarks</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model.Select((item, index) => new { item, index }))
            {
                <tr>
                    <td>@(value.index + 1)</td>
                    <td>@value.item.FundType</td>
                    <td>@value.item.FundTypeCode</td>
                    @if (value.item.IsActive == true)
                    {
                        <td><span class="badge bg-soft-success px-2">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-soft-danger px-2">InActive</span></td>
                    }
                    <td>@value.item.Remarks</td>
                    <td name="buttons">
                        <div class=" float-center">
                            @if (actors.FirstOrDefault(x => x.Action == "UpdateFundType")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateFundType", "FundType", new { FundTypeId = value.item.Id })', 'Update Fund Type')" title="Update Fund Type"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                            }
                            @if (actors.FirstOrDefault(x => x.Action == "DeleteFundType")?.Permission ?? false)
                            {
                            <a style="cursor:pointer" class="btn btn-sm btn-soft-danger btn-circle" onclick="PopUPAjaxDelete('@Url.Action("DeleteFundType", "FundType", new { FundTypeId = value.item.Id })', 'Remove Fund Type')" title="Delete Fund Type"> <i class="dripicons-trash" aria-hidden="true"></i></a>
                            }
                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>