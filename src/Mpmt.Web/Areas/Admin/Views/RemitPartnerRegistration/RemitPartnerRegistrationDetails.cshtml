@using Mpmt.Core.Dtos.PartnerSignUp;
@model PartnerDetailSignup
<div class="card-body p-0 auth-header-box mb-3">
    <div class="table-responsive">
        <table class="table table-hover table-bordered mb-0">
            <tbody>
                <tr>
                    <td><span>Created Date :</span></td>
                    <td><span>@Model.CreatedDate</span></td>
                </tr>
                <tr>
                    <td><span>Id :</span></td>
                    <td><span><strong style="color: #f98c45">@Model.Id</strong></span></td>
                </tr>
                <tr>
                    <td><span>Full Name :</span></td>
                    <td><span>@Model.FirstName  @Model.SurName</span></td>
                </tr>
                <tr>
                    <td><span>Shortname :</span></td>
                    <td><span>@Model.Shortname</span></td>
                </tr>
                <tr>
                    <td><span>Email :</span></td>
                    <td><span>@Model.Email</span></td>
                </tr>
                <tr>
                    <td><span>Partner Code :</span></td>
                    <td><span>@Model.PartnerCode</span></td>
                </tr>
                <tr>
                    <td><span>Address :</span></td>
                    <td><span>@Model.Address</span></td>
                </tr>
                <tr>
                    <td><span>Position :</span></td>
                    <td><span>@Model.Post</span></td>
                </tr>
                <tr>
                    <td><span>Mobile No. :</span></td>
                    <td><span>@Model.MobileNumber</span></td>
                </tr>
                <tr>
                    <td><span>Organization Name :</span></td>
                    <td><span>@Model.OrganizationName</span></td>
                </tr>
                <tr>
                    <td><span>Organization Email :</span></td>
                    <td><span>@Model.OrgEmail</span></td>
                </tr>
                <tr>
                    <td><span>Registration Number :</span></td>
                    <td><span>@Model.RegistrationNumber</span></td>
                </tr>
                <tr>
                    <td><span>Status :</span></td>
                    <td><span>@Model.IsActive</span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="table-responsive">
        <table id="datatable-buttons78" class="table table-striped dataTable nowrap">
            <thead class="table-light">
                <tr>
                    <th>Director Id</th>
                    <th>Partner Code</th>
                    <th>Full Name</th>
                    <th>Contact No.</th>
                    <th>Email</th>
                    <th>Last Name Present</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Directors)
                {
                    <tr>
                        <td> @item.DirectorId</td>
                        <td> @item.PartnerCode </td>
                        <td> @item.FirstName  @item.SurName </td>
                        <td> @item.ContactNumber </td>
                        <td> @item.Email </td>
                        <td> @item.IsSurNamepresent </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="mt-4">
        <div class="button-items">
            <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</div>