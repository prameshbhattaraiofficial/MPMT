@using Mpmt.Core.Dtos.ModuleAction
@model IUDModuleAction

<form id="ModuleActionAddForm" class="form-horizontal auth-form" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            <li class="text-danger">@ViewBag.Error</li>
        }
    </ul>
    <div class="row">
        <input asp-for="Id" type="hidden" />
        <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Module</label>
            <select asp-for="ModuleId" class="form-select" id="ddlModule" asp-items="@ViewBag.ParentModuleddl">
                <option value="0">No Module</option>
            </select>
        </div>
     @*   <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Action</label>
            <select asp-for="ActionId" class="form-select" id="ddlAction" asp-items="@ViewBag.Actionddl">
                <option value="0">No Action</option>
            </select>
        </div>*@
        <div class="row">
            <div class="col-sm-6">
                <h6 class="text-center">Available Action</h6>
            </div>
            <div class="col-sm-6">
                <h6 class="text-center">Selected Action</h6>
            </div>
            <div class="col-sm-12 mb-5">
                @Html.ListBoxFor(model => model.ActionIds, new MultiSelectList(ViewBag.Actionddl, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "my-select" })
            </div>
        </div>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword"> Display Order</label>
            <div class="input-group">
                <input asp-for="DisplayOrder" type="text" class="form-control">
            </div>
        </div>
    </div>
    <div class="form-check form-switch mb-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Status</label>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Submit<i class="fas fa-paper-plane ms-1"></i></button>
    </div>
</form><!--end form-->
<script src="~/customjs/form-select-custom.js"></script>
<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("UpdateModuleAction", "ModuleAction")',
        containerSelector: '#add-new .modal-body',
        selector: '#ModuleActionAddForm'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
