@using Mpmt.Core.ViewModel.ModuleAction
@model IEnumerable<ModuleActionModelView>
<div class="table-responsive">
    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Module</th>
                <th>Action</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model.Select((item, index) => new { item, index }))
            {
                <tr>
                    <td>@(value.index + 1)</td>
                    <td>@value.item.Module</td>
                    <td>@value.item.ActionName</td>
                    @if (value.item.IsActive == true)
                    {
                        <td><span class="badge bg-soft-success px-2">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-soft-danger px-2">InActive</span></td>
                    }
                    <td name="buttons">
                        <div class=" float-center">
                            <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateModuleAction", "ModuleAction", new { moduleActionId = value.item.ModuleId })', 'Update ModuleAction')" title="Update ModuleAction"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                          @*  <a style="cursor:pointer" class="btn btn-sm btn-soft-danger btn-circle" onclick="PopUPAjaxDelete('@Url.Action("DeleteModuleAction", "ModuleAction", new { moduleActionId = value.item.ModuleId })', 'Remove ModuleAction')" title="Delete ModuleAction"> <i class="dripicons-trash" aria-hidden="true"></i></a>*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>