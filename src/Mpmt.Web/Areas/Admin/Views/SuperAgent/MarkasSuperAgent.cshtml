@using Mpmt.Core.ViewModel.CashAgent;

@model ActivateAgent
@if (Model is not null)
{

    <form id="formMarkasSupperAgent" method="post" autocomplete="off" class="text-center">
        <input type="hidden" asp-for="AgentCode" readonly />
        <input type="hidden" asp-for="IsActive" readonly />
        <i class="fa fa-circle-xmark text-danger fa-5x mb-20 m-t-15 "></i>
        <h3 class="m-t-25">Are you sure?</h3>

            <p class="m-t-25 m-b-15">
                Do you really want to mark This User as SuperAgent?<br>
                This process cannot be undone
            </p>

        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-sm btn-primary">
              Mark as SuperAgent
            </button>
        </div>
    </form>
}
else
{
    <i class="fa fa-circle-xmark text-danger fa-5x mb-20 m-t-15 "></i>
