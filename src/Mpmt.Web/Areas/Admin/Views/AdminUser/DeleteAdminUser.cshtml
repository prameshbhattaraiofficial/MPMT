@using Mpmt.Core.ViewModel.AdminUser
@model AdminUserVm

@if (Model is not null)
{
    <form id="formDeleteAdminUser" method="post" autocomplete="off" class="text-center">
        <input type="hidden" asp-for="Id" />
        <i class="fa fa-circle-xmark text-danger fa-5x mb-20 m-t-15 "></i>
        <h3 class="m-t-25">Are you sure?</h3>
        <p class="m-t-25 m-b-15">
            Do you really want to delete this record?<br>
            This process can't be undone.
        </p>
        <label class="form-label">Remarks</label>
        <textarea asp-for="Remarks" cols="30" rows="3" class="form-control" required></textarea>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
        </div>
    </form>
}
else
{
    <i class="fa fa-circle-xmark text-danger fa-5x mb-20 m-t-15 "></i>
    <h3 class="m-t-25">Opps!!</h3>
    <p class="m-t-25 m-b-15">
        We could not find Detail.<br>
        SomeThing went wrong!
    </p>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
    </div>
}
<script>
    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("DeleteAdminUser", "AdminUser")',
        containerSelector: '#add-new .modal-body',
        selector: '#formDeleteAdminUser'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        Pagination.getData();
    });
</script>