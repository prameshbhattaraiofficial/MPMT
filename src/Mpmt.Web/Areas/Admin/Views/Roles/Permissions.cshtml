    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Role Assign</h4>
                        </div>
                        <!--end col-->
                        <div class="col-auto">
                            <div class="add-btn">
                                <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalLogin">
                                    <i class="las la-plus ms-1"></i> Add Role
                                </a>

                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
                <!--end card-header-->
                <div class="card-body">
                    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="table-light">
                            <tr>
                                <th>SrNo</th>
                                <th>Menu Title</th>
                                <th>Parent Menu</th>
                                <th>URL</th>
                                <th>Inner URL</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Partner List</td>
                                <td>Partner</td>
                                <td>/menu/roleassignmypay	</td>
                                <td>NO</td>
                                <td>
                                    <div class="form-check form-switch form-switch-success">
                                        <input class="form-check-input" type="checkbox" id="customSwitchSuccess">
                                    </div>
                                </td>
                                <td name="buttons">
                                    <div class=" float-center">

                                        <button type="button" class="btn btn-sm btn-soft-success btn-circle me-2" title="Update Role Permission">
                                            <i class="dripicons-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-soft-danger btn-circle" title="Delete Role Permission">
                                            <i class="dripicons-trash" aria-hidden="true"></i>
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!--end card-body-->
            </div>
            <!--end card-->
        </div> <!-- end col -->
    </div> <!-- end row -->
