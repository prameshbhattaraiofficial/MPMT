@using Mpmt.Core.Dtos.Employee
@using Mpmt.Core.Models.RMP;
@model IEnumerable<EmployeeDetails>
@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<div class="table-responsive">
    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Department</th>
                <th>Select Role</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model.Select((item, index) => new { item, index }))
            {
                <tr>
                    <td>@(value.index + 1)</td>
                    <td>@value.item.FullName</td>
                    <td>@value.item.Username</td>
                    <td>@value.item.Email</td>
                    <td>@value.item.Department</td>
                    <td>
                        <select asp-for="@value.item.RoleId" class="form-select" id="exampleFormControlSelect1" asp-items="ViewBag.AdminRoleddl">
                        </select>
                    </td>
                    @if (value.item.Status == true)
                    {
                        <td><span class="badge bg-soft-success px-2">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-soft-danger px-2">InActive</span></td>
                    }
                   
                    <td name="buttons">
                        <div class=" float-center">

                            @*<a style="cursor:pointer" class="btn btn-success btn-sm" onclick="EmployeeRole('@Url.Action("EmployeeRole", "Employee", new { EmployeeId = value.item.Id,RoleId=value.item.RoleId })', ' Employee Role')"> Save</a>*@
                            @if (actors.FirstOrDefault(x => x.Action == "UpdateEmployee")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateEmployee", "Employee", new { EmployeeId = value.item.Id })', 'Update Employee')"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                            }
                            @if (actors.FirstOrDefault(x => x.Action == "DeleteEmployee")?.Permission ?? false)
                            {
                            <a style="cursor:pointer" class="btn btn-sm btn-soft-danger btn-circle" onclick="PopUPAjaxDelete('@Url.Action("DeleteEmployee", "Employee", new { EmployeeId = value.item.Id })', 'Remove Employee')"> <i class="dripicons-trash" aria-hidden="true"></i></a>
                            }
                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>