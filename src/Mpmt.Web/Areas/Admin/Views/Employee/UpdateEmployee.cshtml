@using Mpmt.Core.Dtos.Employee
@model IUDEmployee



<form id="EmployeeAddForm" class="form-horizontal auth-form" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            <li class="text-danger">@ViewBag.Error</li>
        }
    </ul>

    <div class="row">
        <input asp-for="Id" type="hidden" />
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword">Full Name</label>
            <div class="input-group">
                <input asp-for="FullName" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword">Username</label>
            <div class="input-group">
                <input asp-for="UserName" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword">Email</label>
            <div class="input-group">
                <input asp-for="Email" type="text" class="form-control">
            </div>
        </div>
        @*<div class="col-md-6 form-group mb-2">
            <label class="form-label" for="userpassword">Password</label>
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control">
            </div>
        </div>
        <div class="col-md-6 form-group mb-2">
            <label class="form-label" for="userpassword">Confirm Password</label>
            <div class="input-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control">
            </div>
        </div>*@

        <div class="col-md-6 form-group mb-2">
            <label class="form-label" for="userpassword">Department</label>
            <div class="input-group">
                <input asp-for="Department" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Select Role</label>
            <select asp-for="RoleId" class="form-select" id="exampleFormControlSelect1" asp-items="ViewBag.AdminRoleddl">
            </select>
        </div>

    </div>
    <div class="form-check form-switch">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Is Active</label>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Submit<i class="fas fa-paper-plane ms-1"></i></button>
    </div>
</form><!--end form-->
<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("UpdateEmployee", "Employee")',
        containerSelector: '#add-new .modal-body',
        selector: '#EmployeeAddForm'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');

        Pagination.getData();
    });
</script>
