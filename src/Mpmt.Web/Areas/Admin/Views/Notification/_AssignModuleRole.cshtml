@using Mpmt.Core.Dtos.DropDown;
@model AssignNotificationModuleRoleDto
@{
    var data = ViewBag.Roles;
}
<form id="formAssignNotificationModuleRole" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            @foreach (var error in ViewBag.Error)
            {
                <li class="text-danger">@error</li>
            }
        }
    </ul>
    <input asp-for="moduleid" readonly hidden />
    <div class="row">
        <div class="col-sm-6">
            <h6 class="text-center">Available Role</h6>
        </div>
        <div class="col-sm-6">
            <h6 class="text-center">Selected Role</h6>
        </div>
        <div class="col-sm-12 mb-5">
            <select multiple="multiple" id="my-select" asp-for="roleid" asp-items="ViewBag.Roles">
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("AssignNotificationModuleRole", "Notification")',
        containerSelector: '#add-new .modal-body',
        selector: '#formAssignNotificationModuleRole'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        Pagination.getData();
    });
</script>
<script src="~/partner/assets/js/form-select-custom.js"></script>

