@using Mpmt.Core.Dtos.RoleModuleAction
@model IUDRoleModuleAction

<form id="RoleModuleActionAddForm" class="form-horizontal auth-form" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            <li class="text-danger">@ViewBag.Error</li>
        }
    </ul>
    <div class="row">

        <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Role</label>
            <select asp-for="RoleId" class="form-select" id="ddlRole" asp-items="@ViewBag.Roleddl">
                <option value="0">No Role</option>
            </select>
        </div>
        <input asp-for="Id" type="hidden" />
        <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Module</label>
            <select asp-for="ModuleId" class="form-select" id="ddlModule" asp-items="@ViewBag.ParentModuleddl">
                <option value="0">No Module</option>
            </select>
        </div>
        <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Action</label>
            @Html.ListBoxFor(model => model.ActionIds, new MultiSelectList(ViewBag.Actionddl, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "ddlAction" })
        </div>

    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Submit<i class="fas fa-paper-plane ms-1"></i></button>
    </div>
</form><!--end form-->
<script>

    FormHandler.init({
