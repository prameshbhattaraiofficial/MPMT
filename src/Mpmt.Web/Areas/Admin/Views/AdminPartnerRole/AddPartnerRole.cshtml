@using Mpmt.Core.ViewModel.Role
@model AddAdminPartnerRoleVm

<form id="partnerRole" class="form-horizontal auth-form" method="post" autocomplete="off">
    @if (ViewBag.Error is not null)
    {
        <ul>
            <li class="text-danger">@ViewBag.Error</li>
        </ul>
    }
    <div class="form-group mb-2">
        <label class="form-label">Role Title</label>
        <div class="input-group">
            <input asp-for="RoleName" type="text" class="form-control" placeholder="Eg. Bulk Transaction">
        </div>
    </div>
    <div class="form-group mb-2">
        <label class="form-label">Role Description</label>
        <div class="input-group">
            <input asp-for="Description" type="text" class="form-control" placeholder="Eg. Can Edit, Delete, Update, View">
        </div>
    </div>
    <div class="form-check form-switch">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Is Active</label>
    </div>
    <div class="form-check form-switch">
        <input asp-for="IsSystemRole" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Is System Role</label>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Create<i class="fas fa-paper-plane ms-1"></i></button>
    </div>

</form>
<script>
    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("AddPartnerRole", "AdminPartnerRole")',
        containerSelector: '#add-new .modal-body',
        selector: '#partnerRole'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        Pagination.getData();
    });
</script>