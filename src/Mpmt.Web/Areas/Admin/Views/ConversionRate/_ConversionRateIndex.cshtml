@using Mpmt.Core.Dtos.ConversionRate
@using Mpmt.Core.Models.RMP;
@model IEnumerable<ConversionRateDetails>
@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<div class="table-responsive">
    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Source Currency</th>
                <th>Destination Currency</th>
                <th>Unit Value</th>
                <th>Buying Rate</th>
                <th>Selling Rate</th>
                <th>Current Rate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model.Select((item, index) => new { item, index }))
            {
                <tr>
                    <td>@(value.index + 1)</td>
                    <td>@value.item.SourceCurrency</td>
                    <td>@value.item.DestinationCurrency</td>
                    <td>@value.item.UnitValue</td>
                    <td>@value.item.BuyingRate.ToString("N2")</td>
                    <td>@value.item.SellingRate.ToString("N2")</td>
                    <td>@value.item.CurrentRate.ToString("N2")</td>
                    @if (value.item.IsActive == true)
                    {
                        <td><span class="badge bg-soft-success px-2">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-soft-danger px-2">InActive</span></td>
                    }
                    <td name="buttons">
                        <div class=" float-center">
                            @if (actors.FirstOrDefault(x => x.Action == "UpdateConversionRate")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateConversionRate", "ConversionRate", new { conversionRateId = value.item.Id })', 'Update Conversion Rate')" title="Update Conversion Rate"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                            }
                            @if (actors.FirstOrDefault(x => x.Action == "DeleteConversionRate")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-danger btn-circle" onclick="PopUPAjaxDelete('@Url.Action("DeleteConversionRate", "ConversionRate", new { conversionRateId = value.item.Id })', 'Remove Conversion Rate')" title="Delete Conversion Rate"> <i class="dripicons-trash" aria-hidden="true"></i></a>
                            }
                            @*<a style="cursor:pointer" class="btn btn-sm btn-soft-warning btn-circle me-2" asp-controller="ConversionRate" asp-action="ExchangeRateHistory" asp-route-Wallet="@value.item.SourceCurrency">
                                <i class="dripicons-preview" aria-hidden="true"></i>
                            </a>*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>