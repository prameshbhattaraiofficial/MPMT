@using Mpmt.Core.Dtos.ConversionRate
@using Mpmt.Core.Models.RMP;
@model IEnumerable<ConversionRateDetails>
@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Setting</a></li>
                            <li class="breadcrumb-item active">Conversion Rate Settings</li>
                        </ol>
                    </div>
                    <div class="col-auto">
                        <form id="formConversionRatefilter" class="row row-cols-lg-auto align-items-end">
                            <div class="row mb-3 justify-content-end">
                                <div class="col-12">
                                    <div class="input-group">
                                        <input name="SourceCurrency" type="text" class="form-control" placeholder="Source Currency">
                                    </div>
                                </div>
                                @*<div class="col-5">
                                <div class="input-group">
                                <input name="DestinationCurrency" type="text" class="form-control" placeholder="Destination Currency">
                                </div>
                                </div>*@
                            </div>
                            <div class="col-12 mb-3 form-control-wrap focused">
                                <label class="form-label mb-0" for="inlineFormSelectPref">Status</label>
                                <select name="Status" class="form-select" id="validationTooltip04" required>
                                    <option value="0" selected>All</option>>
                                    <option value="1">Active</option>>
                                    <option value="2">Inactive</option>
                                </select>
                            </div>
                            <div class="col-12 mb-3">
                                <button id="btnConversionRatefilter" type="button" class="btn btn-primary"><i class="las la-filter ms-1"></i> Filter</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">Conversion Rate Settings</h4>
                            </div>
                            <div class="col-auto">
                                <div class="add-btn">
                                    <a class="btn btn-primary btn-shadow-2 btn-md text-white" asp-controller="ConversionRate" asp-action="ExchangeRateHistory">
                                        <i class="dripicons-document"></i> Exchange Rate History
                                    </a>
                                    @if (actors.FirstOrDefault(x => x.Action == "AddConversionRate")?.Permission ?? false)
                                    {
                                        <a onclick="ShowPopUp('@Url.Action("AddConversionRate","ConversionRate")','Add Conversion Rate')" class="btn btn-primary btn-shadow-2 btn-md text-white">
                                            <i class="las la-plus ms-1"></i> Add Conversion Rate
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="ConversionRateTableWrapper" class="table-responsive">
                            <partial name="_ConversionRateIndex" model="@Model" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/admin.pagination.js" asp-append-version="true"></script>
    <script src="~/js/admin.users.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            Pagination.init({
                ajax: true,
                method: 'GET',
                browserPath: '@Context.Request.Path',
                fetchUrl: '@Url.Action("ConversionRateIndex", "ConversionRate")',
                selector: '#ConversionRateTableWrapper'
            });

            $(Pagination).on('before', function (e) {
                e.preventDefault();
                var usersFilterFormValues = $('#formConversionRatefilter').serializeArray();
                $.each(usersFilterFormValues, function (i, obj) {
                    e.payload.paramsBuilder.addParameter(obj['name'], obj['value']);
                });

                e.payload.paramsBuilder.addParameters(getPaginationFieldParams());
            });

            addUsersPageHandlers();
            addPaginationHandlers();

            function addUsersPageHandlers() {
                $('#formConversionRatefilter').on('submit', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                })

                $('#btnConversionRatefilter').on('click', function (e) {
                    e.preventDefault();
                    Pagination.getData();
                    return false;
                });
            }
        });
    </script>
}
