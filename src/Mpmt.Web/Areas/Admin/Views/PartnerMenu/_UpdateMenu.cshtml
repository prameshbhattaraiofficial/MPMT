@using Mpmt.Core.Dtos.Menu
@model IUDPartnerMenu

<form id="MenuUpdateForm" class="form-horizontal auth-form" method="post" autocomplete="off">
    <ul>
        @if (ViewBag.Error is not null)
        {
            <li class="text-danger">@ViewBag.Error</li>
        }
    </ul>
    <div class="row">
        <input asp-for="Id"  readonly hidden>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword"> Title</label>
            <div class="input-group">
                <input asp-for="Title" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-4 form-group mb-2">
            <label class="form-label" for="userpassword">Area</label>
            <div class="input-group">
                <input asp-for="Area" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-4 form-group mb-2">
            <label class="form-label" for="userpassword">Controller</label>
            <div class="input-group">
                <input asp-for="Controller" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-4 form-group mb-2">
            <label class="form-label" for="userpassword">Action</label>
            <div class="input-group">
                <input asp-for="Action" type="text" class="form-control">
            </div>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label" for="exampleFormControlSelect1">Parent Menu</label>
            <select asp-for="ParentId" class="form-select" id="exampleFormControlSelect1" asp-items="@ViewBag.ParentMenuddl">
                <option value="0">No Parent</option>
            </select>
        </div>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword"> Display Order</label>
            <div class="input-group">
                <input asp-for="DisplayOrder" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-12 form-group mb-2">
            <label class="form-label" for="userpassword">Icon Class</label>
            <div class="input-group">
                <input asp-for="ImagePath" type="text" class="form-control">
            </div>
            <p>Use fontawesome icons class name (versions : 5.15.4 ) <a href="https://fontawesome.com/v5/search?o=r&s=light%2Csolid" target="_blank"> Here</a> |example: fas fa-yin-yang | for :<i class="fas fa-yin-yang"></i>  </p>
        </div>
    </div>
    <div class="form-check form-switch mb-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Status</label>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Submit<i class="fas fa-paper-plane ms-1"></i></button>
    </div>
</form><!--end form-->
<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("UpdateMenu", "PartnerMenu")',
        containerSelector: '#add-new .modal-body',
        selector: '#MenuUpdateForm'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        //new PNotify({
