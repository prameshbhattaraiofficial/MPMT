@using Mpmt.Core.Dtos.TransferPurpose
@using Mpmt.Core.Models.RMP;
@model IEnumerable<TransferPurposeDetails>
@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<div class="table-responsive">
    <table id="datatable" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Transfer Purpose Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in Model.Select((item, index) => new { item, index }))
            {
                <tr>
                    <td>@(value.index + 1)</td>
                    <td>@value.item.PurposeName</td>
                    <td>@value.item.Description</td>
                    @if (value.item.IsActive == true)
                    {
                        <td><span class="badge bg-soft-success px-2">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-soft-danger px-2">InActive</span></td>
                    }
                    <td name="buttons">
                        <div class=" float-center">
                            @if (actors.FirstOrDefault(x => x.Action == "UpdateTransferPurpose")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateTransferPurpose", "TransferPurpose", new { TransferPurposeId = value.item.Id })', 'Update Transfer Purpose')" title="Update Transfer Purpose"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                            }
                            @if (actors.FirstOrDefault(x => x.Action == "DeleteTransferPurpose")?.Permission ?? false)
                            {
                                <a style="cursor:pointer" class="btn btn-sm btn-soft-danger btn-circle" onclick="PopUPAjaxDelete('@Url.Action("DeleteTransferPurpose", "TransferPurpose", new { TransferPurposeId = value.item.Id })', 'Remove Transfer Purpose')" title="Delete Transfer Purpose"> <i class="dripicons-trash" aria-hidden="true"></i></a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>