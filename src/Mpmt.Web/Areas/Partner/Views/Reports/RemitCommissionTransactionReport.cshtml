                //     e.preventDefault();
                //     Pagination.getData();
                //     return false;
                // });

                $('#btnPartnerRemitCommissionTransactionexportexcell').on('click', function (e) {
                    debugger

                    e.preventDefault();
                    var paramsA = {
                        Export: 1

                    };
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportPartnerRemitCommissionTransactiontoexcell", "Reports")');

                    return false;
                });
                $('#btnPartnerRemitCommissionTransactionexportcsv').on('click', function (e) {

                    e.preventDefault();
                    var paramsA = {
                        Export: 1,

                    }
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportPartnerRemitCommissionTransactionToCsv", "Reports")');

                    return false;
                });
                $('#btnPartnerRemitCommissionTransactionexportPdf').on('click', function (e) {
                    e.preventDefault();
                    var paramsA = {
                        Export: 1,

                    };
                    Pagination.ExportDataWithPagination('GET', paramsA, '@Url.Action("ExportPartnerRemitCommissionTransactiontoPdf", "Reports")');
                    debugger
                    return false;
                });
            }
        });
