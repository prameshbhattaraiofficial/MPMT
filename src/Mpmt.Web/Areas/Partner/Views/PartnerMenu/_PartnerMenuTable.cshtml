@using Mpmt.Core.Models.RMP;
@using Mpmt.Core.ViewModel.Menu
@model List<PartnerMenu>


@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
}
<style>
    .__table {
        border-collapse: collapse;
        width: 100%;
        margin: 20px auto;
    }

        .__table tr td {
            padding: 5px;
            font-weight: 800;
        }

        .__table tr.parent td {
            cursor: pointer;
        }

        .__table tr.child td {
            color: #24695C;
            font-weight: 400;
        }

        .__table tr.child.hidden {
            display: none;
        }

</style>




<div class="table-responsive">
    <table id="datatable" class="__table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Title</th>
                <th>Area</th>
                <th>controller</th>
                <th>Action</th>
                <th>Parent Id</th>
                <th>Display Order</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model is not null)
            {
                
                    var i = 0;
                
                @foreach (var menu in Model.OrderBy(m => m.DisplayOrder))
                {
                    i++;

                    if (menu.Title == "Menu Manager")
                    {

                        <tr class="parent" data-child="@menu.Id" onclick="changeclass(@menu.Id)" style="background-color:rgba(105 36 61 / 8%)">


                           <td>@i</td>
                            <td >@menu.Title</td>
                            <td>@menu.Area</td>
                            <td>@menu.Controller</td>
                            <td>@menu.Action</td>
                            <td> <i class="fa-solid fa-bars-staggered p-r-5"></i>  @menu.child.Count()</td>
                            <td>@menu.DisplayOrder</td>

                            <td class="status"></td>
                            <td></td>
                        </tr>
                    }
                    else
                    {
                        <tr class="parent" data-child="@menu.Id" onclick="changeclass(@menu.Id)">
                            <td>@i</td>
                            <td class="text-danger">@menu.Title</td>
                            <td>@menu.Area</td>
                            <td>@menu.Controller</td>
                            <td>@menu.Action</td>
                            <td class="text-danger"><i class="dripicons-checklist"></i>  @menu.child.Count()</td>
                            <td>
                                @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuDisplayOrder")?.Permission ?? false)
                                {
                                    <input style="width:60%" placeholder="@menu.DisplayOrder" type="number" onfocusout="changeDisplayOrder('@Url.Action("UpdateMenuDisplayOrder","PartnerMenu")','@menu.Id',this)" />
                                }
                            </td>

                            <td>
                                @{



                                    @if (menu.IsActive == true)
                                    {

                                        <div class="form-check form-switch">
                                            @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuIsactive")?.Permission ?? false)
                                            {
                                                <input asp-for="@menu.IsActive" class="form-check-input bg-success" onclick="changeMenuIsactive('@Url.Action("UpdateMenuIsactive","PartnerMenu")','@menu.Id',this)" style="cursor: pointer" type="checkbox" id="menuActiveSwitch_@menu.Id">
                                            }

                                        </div>



                                    }
                                    else
                                    {

                                        <div class="form-check form-switch">
                                            @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuIsactive")?.Permission ?? false)
                                            {
                                                <input asp-for="@menu.IsActive" onclick="changeMenuIsactive('@Url.Action("UpdateMenuIsactive","PartnerMenu")','@menu.Id',this)" class="form-check-input bg-danger" type="checkbox" id="flexSwitchCheckDefault">
                                            }
                                        </div>

                                    }


                                }

                            </td>
                            <td class="status">
                                @if (actors.FirstOrDefault(x => x.Action == "UpdateMenu")?.Permission ?? false)
                                {
                                    <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateMenu", "PartnerMenu", new {MenuId = menu.Id })', 'Update Menu')"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                                }
                            </td>
                        </tr>
                    }
                    if (menu.child is not null)
                    {
                        foreach (var child in menu.child.OrderBy(m => m.DisplayOrder))
                        {

                            <tr class="child @menu.Id hidden ">
                                <td><i class="dripicons-arrow-thin-right"></i></td>
                                <td>@child.Title</td>
                                <td>@child.Area</td>
                                <td>@child.Controller</td>
                                <td>@child.Action</td>
                                <td>@child.ParentId</td>
                                <td>
                                    @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuDisplayOrder")?.Permission ?? false)
                                    {
                                        <input style="width:60%" placeholder="@child.DisplayOrder" type="number" onfocusout="changeDisplayOrder('@Url.Action("UpdateMenuDisplayOrder","PartnerMenu")','@child.Id',this)" />
                                    }
                                </td>
                                <td>
                                    @{

                                        @if (child.IsActive == true)
                                        {

                                            <div class="form-check form-switch">
                                                @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuIsactive")?.Permission ?? false)
                                                {
                                                    <input asp-for="@child.IsActive" class="form-check-input bg-success" onclick="changeMenuIsactive('@Url.Action("UpdateMenuIsactive","PartnerMenu")','@child.Id',this)" style="cursor: pointer" type="checkbox" checked id="menuActiveSwitch_@child.Id">
                                                }

                                            </div>



                                        }
                                        else
                                        {

                                            <div class="form-check form-switch">
                                                @if (actors.FirstOrDefault(x => x.Action == "UpdateMenuIsactive")?.Permission ?? false)
                                                {
                                                    <input asp-for="@child.IsActive" onclick="changeMenuIsactive('@Url.Action("UpdateMenuIsactive","PartnerMenu")','@child.Id',this)" class="form-check-input bg-danger" type="checkbox"  id="menuActiveSwitch_@child.Id">
                                                }
                                            </div>

                                        }


                                    }

                                </td>
                                <td class="status">
                                    @if (actors.FirstOrDefault(x => x.Action == "UpdateMenu")?.Permission ?? false)
                                    {
                                        <a style="cursor:pointer" class="btn btn-sm btn-soft-success btn-circle me-2" onclick="ShowPopUp('@Url.Action("UpdateMenu", "PartnerMenu", new {MenuId = child.Id })', 'Update Menu')"> <i class="dripicons-pencil" aria-hidden="true"></i></a>
                                    }


                                </td>
                            </tr>
                        }
                    }
                }
            }

        </tbody>
    </table>
</div>


