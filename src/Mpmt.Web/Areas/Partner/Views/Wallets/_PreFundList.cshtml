@using Mpmt.Core.Dtos.PrefundRequest
@using Mpmt.Core.Dtos.Pagination
@using Mpmt.Core.Dtos.Paging
@using Mpmt.Core.Models.RMP;
@model PagedList<PreFundRequestDetails>

@{
    var actors = ViewBag.actions as IEnumerable<ActionPermission> ?? new List<ActionPermission>();
    var sn = 1;
}
<div class="table-responsive tableFixHead">
    <table id="datatable-buttons78" class="table table-striped dataTable nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Sn</th>
                <th>Register Date</th>
                <th>Partner Code</th>
                <th>FundType</th>
                <th>Source Currency</th>
                <th>Destination Currency</th>
                <th>Requested Amount </th>
                <th>Txn Id</th>
                <th>Voucher Image</th>
                <th>Remarks</th>
                <th>Request Status</th>
                <th>Requested Status Code</th>
                <th>Requested User Type</th>
                <th>Fund Requested Date</th>
                <th>Fund Requested By</th>
                <th>Fund Updated Date</th>
                <th>Fund Updated By</th>
                <th>Updated User Type</th>

                <th>Action</th>


            </tr>
        </thead>


        <tbody>
            @if (Model.Items.Count() <= 0)
            {
                <tr></tr>
                <tr></tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-danger" style="font-size:16px;">
                        No Record Found
                    </td>
                </tr>
            }
            else
            {
                <style>
                    tr.active {
                        background: #ccc;
                    }

                    .tableFixHead {
                        overflow-y: auto;
                        height: 500px;
                    }

                        .tableFixHead thead th {
                            position: sticky;
                            top: 0px;
                        }
                </style>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td> @item.Sn </td>
                        <td> @item.RegisteredDate </td>
                        <td> @item.PartnerCode </td>
                        <td> @item.FundType </td>
                        <td> @item.SourceCurrency </td>
                        <td> @item.DestinationCurrency </td>
                        <td> @item.Amount </td>
                        <td> @item.TransactionId </td>
                        <td>
                            <a data-bs-toggle="modal" data-bs-target="#fullimage">
                                <img src="@item.VoucherImgPath" alt="" class="thumb-xs me-1">
                            </a>
                        </td>
                        <td> @item.Remarks </td>
                        <td> @item.RequestStatus </td>
                        <td>@item.RequestStatusCode</td>
                        <td>@item.RequestedUserType</td>
                        <td>@item.FundRequestedDate</td>
                        <td>@item.FundRequestedBy</td>
                        <td>@item.FundUpdatedDate</td>
                        <td>@item.FundUpdatedBy</td>
                        <td>@item.UpdatedUserType</td>


                        @* <td><span class="badge bg-soft--danger px-2">pending</span></td>*@
                        <td name="buttons">
                            @if (actors.FirstOrDefault(x => x.Action == "PreFundDetails")?.Permission ?? false)
                            {
                                <div class=" float-center">
                                    <a class="btn btn-sm btn-soft-primary btn-circle tippy-btn" onclick="ShowPopUp('@Url.Action("PreFundDetails", "Wallets", new { id = item.Id })', 'Pre Fund Request Details')" title="View Details"><i class="mdi mdi-eye align-self-center font-16 icon-dual me-1"></i></a>
                                </div>
                            }
                        </td>
                    </tr>
                    sn = sn + 1;
                }
            }
        </tbody>
    </table>
</div>
<partial name="_PaginationFooter"
         model="new PaginationFooter(Model.PageNumber, Model.PageSize, Model.Items.Count(), Model.FilteredCount, Model.TotalCount, Model.TotalPages)" />
<script>
    $(function () {
        $('td').click(function () {
            $('tr').removeClass('active');
            $(this).parent().addClass('active');
        });
    });
</script>       