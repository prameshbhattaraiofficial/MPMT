                        <div id="PreFundRequestApprovedTableWrapper" class="table-responsive">
                            <partial name="_WalletSattement" model="@Model" />
                        </div>
                    </div>
                    <!--end card-body-->
                </div>
                <!--end card-->
            </div> <!-- end col -->
        </div> <!-- end row -->




    </div><!-- container -->

</div>
